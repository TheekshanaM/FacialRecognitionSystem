@model IEnumerable<DataAccess.UserDataExtended2>
@{
    ViewBag.Title = "NameSearch";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>NameSearch</h2>
<hr />
<br />
@if (Model == null)
{
    <div class="form-group ">
        <div class="col-md-5 col-md-offset-2">
            <strong class="form-control">There is no Search item.</strong>
        </div>
    </div>
    <br /><br />
    <div class="form-group">
        <div class="col-md-5 col-md-offset-2">
            <div class="btn btn-danger">
                <a href="@Url.Action("Search","User")">Back</a>
            </div>
        </div>
    </div>
}
else
{
    <div class="panel panel-default col-md-5 col-md-offset-2">


        <table class="table ">
            @foreach (var user in Model)
            {
                <tr>
                    <td><img src="@user.Link" style="height:68px; width:70px; border-radius: 50%;position: static;" /><strong> @Html.ActionLink((user.FirstName + "  " + user.LastName), "UserProfile", "User", new { id = user.UserId }, new { @class = "col col-sm-offset-1" }) </strong></td>

                </tr>

            }
        </table>


    </div>
}

